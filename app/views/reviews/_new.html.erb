
<%= form_for(@review, html: {class: "form-horizontal"}) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<%= f.hidden_field :user_id, value: current_user.id %>
    <% if defined? item_id %>
      <%= f.hidden_field :item_id, value: item_id %>
  <% end %>
    <% if defined? author_id %>
      <%= f.hidden_field :author_id, value: author_id %>
  <% end %>
    <% if defined? series_id %>
      <%= f.hidden_field :series_id, value: series_id %>
  <% end %>

      <div class="form-group">
        <div class="col-sm-8">
          <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
        </div>
        <div class="col-sm-4">
          <%= f.select :rating, star_ratings, selected: 5 %>
       </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
          <%= f.text_area :content, placeholder: "Write a review...", class: "form-control" %>
        </div>
      </div>

      <div class="actions form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Post", class: "btn btn-large btn-primary" %>
        </div>
      </div>

<% end %>