<% provide :title, @review.title %>
<% provide :site_section, '0' %>

<div class="content">
	<h2><%= mini_cover_for @review.topic %><%= link_to @review.topic_title, @review.topic %>: <%= @review.title %></h2>
</div>

<div class="content">
	<h3>By <%= @review.user.name %> <%= separator_symbol %> <%= link_to "view all reviews (#{@review.user.reviews.length})", reviews_user_path(@review.user) %>
	<% if signed_in? && @review.user.id==current_user.id %>
		<%= separator_symbol %> <%= link_to "edit", edit_review_path(@review) %>
		<%= separator_symbol %> <%= link_to "delete", @review, method: :delete, data: { confirm: "You sure?" } %>
	<% end %>
	</h3>
</div>

<div class="content">
	<p><%= simple_format @review.content %></p>
</div>

<div class="content">
	<p>Verdict: <%= "★"*@review.rating.to_i %><%= "☆"*(5-@review.rating.to_i) %></p>
</div>