<!DOCTYPE html>
<html>
<head>
  <title>CUSFS Library | <%= yield :title %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag %>
  <%= render 'layouts/shim' %>
</head>
<body>
  <%= content_tag :div, class: "metacontainer container-#{yield(:site_section)}" do %>
  <%= render 'layouts/header' %>
    <div class="container cusfs-body">
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      <%= render 'layouts/footer' %>
    </div>
  <% end %>

</body>
</html>
