<% provide(:title, "Browse #{@title.downcase}") %>
<% provide :site_section, "0" %>

<div class="content">
	<h1>Browse <%= @title.downcase %></h1>
</div>

<% if @items.any? %>

	<div class="content content-mini">
		<%= will_paginate %>
		<%= render 'search' %>
	</div>

	<div class="content">
		<ul class="items">
			<%= render @items %>
		</ul>
	</div>

	<div class="content content-mini">
		<%= will_paginate %>
	</div>

<% else %>

	<div class="content">
		No items found.
	</div>

<% end %>

