<% provide :title, "New event" %>
<% provide :site_section, "2" %>

<div class="content">
	<h1>New event</h1>
</div>

<div class="content">

  <%= form_for(@event, html: {class: "form-horizontal"}) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <%= f.label :name, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :activity, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
	    	<%= f.collection_select :activity, Event::ACTIVITIES, :to_s, :humanize %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :time, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.datetime_select :time, minute_step: 5, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :end_time, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.datetime_select :end_time, minute_step: 5, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :description, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_area :description, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :location, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :location, class: "form-control" %>
			<small>NB if you want it to link to the locations page it must be exactly one of the following: 
				<ul><li>"Riley Auditorium, Clare College"</li>
				<li>"Glover Room, Clare College"</li>
				<li>"New Combination Room, Pembroke College"</li>
				<li>"The CUSFS Library"</li>
				<li>"Castle End Meeting Rooms, The Colony, Clare College"</li></ul>
			</small>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :image_url, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :image_url, class: "form-control" %>
        </div>
      </div>

      <div class="actions form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Save", class: "btn btn-large btn-primary" %>
        </div>
      </div>

  <% end %>			
</div>

