<% provide :title, "New event" %>
<% provide :site_section, "2" %>
<h1>New event</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@event) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :activity, "Activity" %>
	        <%= f.collection_select :activity, Event::ACTIVITIES, :to_s, :humanize %>

			<%= f.label :time %>
			<%= f.datetime_select :time, minute_step: 5, value: DateTime.now.change({ hour: 19, min: 30 }) %>

			<%= f.label :description %>
			<%= f.text_area :description %>

			<%= f.label :location %>
			<%= f.text_field :location %><br>
			<small>NB if you want it to link to the locations page it must be exactly one of the following: "Riley Auditorium, Clare College", "Glover Room, Clare College", "New Combination Room, Pembroke College"</small>

			<%= f.label :image_url %>
			<%= f.text_field :image_url %>
<br>
			<%= f.submit "Add", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>