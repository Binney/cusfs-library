<li class="event">
	<span class="title">
		<%= link_to event.name, event %> <%= separator_symbol %> <%= event.time.to_s(:short) %>
		 <%= separator_symbol %> <%= event.location %>
	</span>
	<div class="event-description">
		<%= simple_format event.description[0..340] %><%= "..." if event.description.length>340 %>
	</div>
</li>