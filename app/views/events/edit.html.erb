<% provide :title, "Edit event" %>
<% provide :site_section, "2" %>
<h1>Edit event</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@event) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :activity, "Activity" %>
	        <%= f.collection_select :activity, Event::ACTIVITIES, :to_s, :humanize %>

			<%= f.label :time, minute_step: 5 %>
			<%= f.datetime_select :time, minute_step: 5 %>

			<%= f.label :end_time, minute_step: 5 %>
			<%= f.datetime_select :end_time, minute_step: 5 %>

			<%= f.label :description %>
			<%= f.text_area :description %>
			<small> Remember to place instructions on how to get there and disabled access here!</small>

			<%= f.label :location %>
			<%= f.text_field :location %>
			
			<%= f.label :image_url %>
			<%= f.text_field :image_url %>
<br>
			<%= f.submit "Save", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>