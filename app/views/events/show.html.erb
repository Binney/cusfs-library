<% provide(:title, @event.name) %>
<% provide :site_section, "2" %>
<h1><%= @event.name %></h1>

<li class="event">
	<span class="title">
		<%= @event.name %> <%= separator_symbol %> <%= @event.time.to_s(:short) %> <%= separator_symbol %> <%= @event.location %>
	</span>
	<div class="event-description">
		<%= simple_format @event.description %>
	</div>
</li>