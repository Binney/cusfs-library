<% provide :title, "New series" %>
<% provide :site_section, "0" %>
<h1>New series</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@series) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.submit "Add", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>

<%= render 'shared/back_button', path: series_index_path %>