<% provide :title, "#{@series.name} series" %>
<% provide :site_section, "0" %>

<div class="content">
	<h1><%= @series.name %> series</h1>
	<%= render 'is_complete', series: @series %>
</div>

<% if @items.any? %>

	<div class="content">
		<%= will_paginate @items %>
	</div>

	<div class="content">
		<ul class="items">
			<%= render @items %>
		</ul>
	</div>

	<div class="content">
		<%= will_paginate @items %>
	</div>

<% else %>

	<div class="content">
		<p>Sadly, this series appears to have no items in it.</p>
	</div>

<% end %>