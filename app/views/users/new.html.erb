<% provide(:title, 'Create new user') %>
<% provide :site_section, '3' %>

<h1>Create new user</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :membership_expiry, "Member until" %>
      <%= f.date_select :membership_expiry, selected: 1.year.from_now %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
<br>
      <%= f.submit "Create user account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>