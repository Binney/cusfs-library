<% provide(:title, 'Check books out') %>
<% provide :site_section, '0' %>

<div class="content">
  <h1>Check books out</h1>
</div>

<div class="content">
  <div class="row">
    <div class="span6 offset3">

      <%= nested_form_for(@user, html: {class: "form-horizontal"}) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.fields_for :withdrawals do |builder| %>
          <%= render 'withdrawals_fields', f: builder %>
        <% end %>

        <%= f.link_to_add "Add", :withdrawals %>

          <div class="actions form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit "Save", class: "btn btn-large btn-primary" %>
            </div>
          </div>
      <% end %>


    </div>
  </div>
</div>
