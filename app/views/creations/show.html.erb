<% provide(:title, @creation.name) %>
<% provide :site_section, "1" %>

<div class="content">
	<h1><%= @creation.name %></h1>
</div>

<div class="content">
	<%= @creation.medium.to_s %>
	<%= @creation.created_at.to_s(:date) %>
	<div class="creation-description">
		<%= simple_format @creation.description %>
	</div>

	<%= link_to "View", @creation.url %> <%= separator_symbol %> <%= link_to "Download", @creation.url, download: @creation.name %>
</div>

<div class="content">
	<% case @creation.medium %>
		<% when Creation::MEDIA[0] %>
			<%= render 'shared/back_button', path: ttba_path %>
		<% when Creation::MEDIA[1] %>
			<%= render 'shared/back_button', path: art_path %>
		<% when Creation::MEDIA[2] %>
			<%= render 'shared/back_button', path: chainwriting_path %>
		<% else %>
			<%= render 'shared/back_button', path: creative_path %>
	<% end %>
</div>