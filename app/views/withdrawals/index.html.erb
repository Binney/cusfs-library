<% provide :title, "All withdrawals" %>
<% provide :site_section, "0" %>

<div class="content">
	<h1>All withdrawals</h1>
	<%= link_to "Check books out", checkout_path %>
</div>

<div class="content">
	<% if @withdrawals.any? %>
		<ul class="withdrawals">
			<% @withdrawals.each do |withdrawal| %>
				<li>
					<h3><%= link_to withdrawal.user.name, withdrawals_user_path(withdrawal.user) %></h3>
					<%= render withdrawal %>
				</li>
			<% end %>
		</ul>
	<% else %>
		No withdrawals found.
	<% end %>
</div>